
<div class="settings form">
  <div class="col-lg-offset-2 col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Settings</h3>
      </div>
      <div class="panel-body">
        <%= form_for :settings, html: { class: 'form-horizontal' } do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control input-lg" %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control input-lg" %>
          </div>
          <div class="actions">
            <%= f.submit "Update", class: "btn-lg btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="panel-body">
        <h4 class="text-center">To use with other apps</h4>
        <h6 class="text-center">Copy & Paste the following into your app:</h6>
        <pre class="text-center">http://shrtnr.com/api/v1/links/create?api_key=<%= @settings.api_key %>&url=%@</pre>
      </div>
      <%= button_to "New Key", {action: "new_api_key"}, data: {confirm: "Are you sure?" }, class: "btn btn-danger", method:"put"%>
    </div>
  </div>
</div>
